{
  "extends": [
    "tslint:recommended",
    "tslint-config-airbnb"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "./commitlint.config.js"
    ]
  },
  "jsRules": {},
  "rules": {
    "arrow-parens": [
      false
    ],
    "ter-arrow-parens": [
      true,
      "as-needed"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case"
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "import-name": false,
    "max-line-length": [
      true,
      150
    ],
    "no-this-assignment": false,
    "member-access": [
      false,
      "check-accessor"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "align": false,
    "object-shorthand-properties-first": false,
    "no-consecutive-blank-lines": [
      true,
      3
    ],
    "no-console": [
      false
    ],
    "no-empty": [
      false
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "member-ordering": false
  },
  "rulesDirectory": []
}